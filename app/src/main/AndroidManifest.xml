<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projetognote">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/icone_gnote"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_gnote"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoGnote">
        <activity android:name=".activity.InfoInsulinaActivity"></activity>
        <activity android:name=".activity.AdicionarRegistroActivity" />
        <activity android:name=".fragments.PerfilFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".fragments.MensalFragment"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".activity.ControleActivity"
            android:label="@string/title_activity_controle"
            android:theme="@style/Theme.ProjetoGnote.NoActionBar" />
        <activity android:name=".activity.CadastroActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>